<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ayomi.almajiriliteracyapp">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@drawable/icon1"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@drawable/icon1"
        android:supportsRtl="true"
        android:theme="@style/Theme.AlmajiriLiteracyApp">
        <activity android:name=".activities.ProfileActivity"
            android:label="Profile"
            android:parentActivityName=".activities.MainActivity">

        </activity>
        <activity
            android:name=".activities.QuizTestActivity"
            android:label="Quiz Test"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.LearningActivity"
            android:label="Learn Your Alphabets"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".auth.LoginActivity"
            android:label="Login"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".auth.RegisterActivity"
            android:label="Register"
            android:parentActivityName=".activities.MainActivity" />
        <activity android:name=".activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.MainActivity" />
    </application>

</manifest>