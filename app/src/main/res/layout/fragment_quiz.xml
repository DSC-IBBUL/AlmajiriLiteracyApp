<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.QuizFragment">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:maxLines="3"
                android:text="(1)   What Letter Of the Alphabet is this?"
                android:textColor="@android:color/black"
                android:textSize="29sp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/soundA"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic__08417_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sound">

                <RadioButton
                    android:id="@+id/question1_true_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:paddingLeft="8dp"
                    android:paddingEnd="8dp"
                    android:text="A"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="#747373"
                    android:textSize="24sp"
                    />

                <RadioButton
                    android:id="@+id/question1_false_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:paddingLeft="8dp"
                    android:paddingEnd="8dp"
                    android:text="F"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="#747373"
                    android:textSize="24sp"
                    />

                <RadioButton
                    android:id="@+id/question1_false_answer2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:paddingLeft="8dp"
                    android:paddingEnd="8dp"
                    android:text="S"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="#747373"
                    android:textSize="24sp"
                    />
            </RadioGroup>



            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:maxLines="3"
                android:text="(2)   What Letter Of the Alphabet is this?"
                android:textColor="@android:color/black"
                android:textSize="29sp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/soundC"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:layout_gravity="center"
                android:clickable="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic__08417_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sound">

                <RadioButton
                    android:id="@+id/question2_false_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:paddingLeft="8dp"
                    android:paddingEnd="8dp"
                    android:text="T"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="#747373"
                    android:textSize="24sp"
                    />

                <RadioButton
                    android:id="@+id/question2_false_answer2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:paddingLeft="8dp"
                    android:paddingEnd="8dp"
                    android:text="J"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="#747373"
                    android:textSize="24sp"
                    />

                <RadioButton
                    android:id="@+id/question2_true_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:paddingLeft="8dp"
                    android:paddingEnd="8dp"
                    android:text="C"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="#747373"
                    android:textSize="24sp"
                    />
            </RadioGroup>



            <TextView
                android:id="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:maxLines="3"
                android:text="(3)   What Letter Of the Alphabet is this?"
                android:textColor="@android:color/black"
                android:textSize="29sp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/soundH"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/ic__08417_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sound">

                <RadioButton
                    android:id="@+id/question3_true_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:paddingLeft="8dp"
                    android:paddingEnd="8dp"
                    android:text="H"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="#747373"
                    android:textSize="24sp"
                    />

                <RadioButton
                    android:id="@+id/question3_false_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:paddingLeft="8dp"
                    android:paddingEnd="8dp"
                    android:text="F"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="#747373"
                    android:textSize="24sp"
                    />

                <RadioButton
                    android:id="@+id/question3_false_answer2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:paddingLeft="8dp"
                    android:paddingEnd="8dp"
                    android:text="G"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="#747373"
                    android:textSize="24sp"
                    />
            </RadioGroup>



            <TextView
                android:id="@+id/text4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:maxLines="3"
                android:text="(4)   What Letter Of the Alphabet is this?"
                android:textColor="@android:color/black"
                android:textSize="29sp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/soundU"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/ic__08417_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sound">



                <RadioButton
                    android:id="@+id/question4_false_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:text="Z"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="#747373"
                    android:textSize="24sp"
                    />
                <RadioButton
                    android:id="@+id/question4_true_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:text="U"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="#747373"
                    android:textSize="24sp" />

                <RadioButton
                    android:id="@+id/question4_false_answer2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:paddingLeft="8dp"
                    android:paddingEnd="8dp"
                    android:text="W"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="#747373"
                    android:textSize="24sp"
                    />


            </RadioGroup>


            <Button
                android:id="@+id/grading_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="#FF4081"
                android:text="Submit"
                android:textSize="24sp"
                android:textColor="@android:color/white" />


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
